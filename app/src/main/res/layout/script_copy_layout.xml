<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="525dp"
    android:layout_height="400dp"
    android:background="@color/light_medium_gray">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/Text.Body.Small.Bold"
            android:layout_margin="@dimen/margin_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/script_from"/>

        <TextView
            android:id="@+id/txt_script_name"
            style="@style/Text.Body.Small.Bold"
            android:layout_margin="@dimen/margin_xsmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/name_script"/>

        <ImageView
            android:id="@+id/img_avatar_script"
            android:layout_margin="@dimen/margin_large"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/apadea_dientes"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/Text.Body.Small.Bold"
            android:layout_margin="@dimen/margin_large"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/script_to"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/lst_scripts"
            android:layout_marginTop="65dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="270dp"
            android:layout_height="200dp" />

        <TextView
            android:id="@+id/btn_copy"
            style="@style/Text.Body.Small.Bold"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/margin_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/script_from"/>
    </LinearLayout>

</LinearLayout>