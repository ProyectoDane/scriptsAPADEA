<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_small"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_avatar_name_item"
            style="@style/Button.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ems="3"
            android:singleLine="true"
            android:ellipsize="end"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/margin_medium" />

        <ImageView
            android:id="@+id/img_avatar_item"
            android:layout_width="@dimen/script_grid_size_card_weight"
            android:layout_height="@dimen/script_grid_size_card_height"
            android:clickable="true"
            android:layout_gravity="center"
            android:duplicateParentState="true"
            android:onClick="clickReadScript" />

        <TextView
            android:id="@+id/txt_editar"
            style="@style/Button.Custom.Heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/script_select_edit"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/margin_medium"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_medium" />

    </LinearLayout>

</android.support.v7.widget.CardView>