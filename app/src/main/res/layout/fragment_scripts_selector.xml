<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        style="@style/Panel.Blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp">

        <ImageView
            android:id="@+id/img_profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/txt_patient_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_text"
            android:textSize="20sp"
            android:layout_alignTop="@+id/btn_new_script"
            android:layout_toRightOf="@+id/img_profile"
            android:layout_toEndOf="@+id/img_profile"
            android:layout_marginLeft="8dp" />

        <TextView
            android:id="@+id/btn_new_script"
            style="@style/Button.Secondary.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/scriptlist_new_script"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/btn_about"
            style="@style/Button.Secondary.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_btn"
            android:visibility="invisible"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <View style="@style/HR.Thick" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/grid_scripts"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>