<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/Panel.White"
    >

    <LinearLayout
        android:layout_width="@dimen/screenplay_container"
        android:layout_height="@dimen/screenplay_container"
        android:orientation="vertical"
        android:layout_gravity="center"
        >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/cover_picture_title"
        android:layout_marginTop="@dimen/margin_medium"
        style="@style/Text"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/txt_patient_name"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_medium"
        style="@style/Text.Body.Big"
        />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_screenplay_edit"
            android:id="@+id/start_edit_button"
            android:layout_gravity="right"
            android:visibility="visible"
            style="@style/Button.Flat"

            />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/you_can_change_title"
        android:layout_marginTop="@dimen/margin_medium"
        style="@style/Text.Body.Medium"
         />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/screenplay_image_height_size"
        android:id="@+id/screenplay_image"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_xxlarge"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher" />

    </LinearLayout>



</LinearLayout>