<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
    </style>

    <style name="Panel">
        <item name="android:paddingRight">@dimen/panel_horizontal_padding</item>
        <item name="android:paddingLeft">@dimen/panel_horizontal_padding</item>
        <item name="android:paddingTop">@dimen/panel_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/panel_vertical_padding</item>
    </style>

    <style name="Panel.White">
        <item name="android:background">@color/white</item>
    </style>

    <style name="HR">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/hr_gray</item>
        <item name="android:layout_marginTop">@dimen/margin_large</item>
        <item name="android:layout_marginBottom">@dimen/margin_large</item>
    </style>

    <style name="HR.Thick">
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <!-- ******* -->
    <!-- Text    -->
    <!-- ******* -->

    <!-- Heavy: sans -->
    <!-- Regular/Roman: serif -->
    <!-- Book: mono -->

    <style name="Text">
        <item name="android:textSize">@dimen/font_size_body</item>
    </style>

    <style name="Text.Body">
        <item name="android:textSize">@dimen/font_size_heading</item>
        <item name="android:typeface">serif</item>
        <!-- Avenir Regular -->
    </style>

    <style name="Text.Body.Big">
        <item name="android:textSize">@dimen/font_size_big</item>
        <item name="android:typeface">serif</item>
        <!-- Avenir Regular -->
    </style>

    <style name="Text.Body.Medium">

        <item name="android:textSize">@dimen/font_size_body</item>
        <item name="android:typeface">serif</item>
        <!-- Avenir Regular -->
    </style>


    <style name="Text.Body.Big.Gray">
        <item name="android:textColor">@color/panel_gray</item>
    </style>

    <style name="Text.Body.Medium.White">
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="Text.Body.Big.Gray.Bold">
        <item name="android:typeface">sans</item>
        <!-- Avenir Heavy -->
    </style>

    <style name="Text.Body.Big.Bold">
        <item name="android:typeface">sans</item>
        <!-- Avenir Heavy -->
    </style>

</resources>
